{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es5", "es6", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@environment": ["src/environment"],
      "@logger": ["src/logger"],
      "@ORM": ["src/ORM"],
      "@router": ["src/router"],
      "@data": ["src/data"],
      "@data/*": ["src/data/*"],
      "@middlewares": ["src/middlewares"],
      "@middlewares/*": ["src/middlewares/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "public"]
}
